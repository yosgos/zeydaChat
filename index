<div id="app">
    <!-- Sidebar -->
    <aside class="hidden md:flex w-64 flex-col bg-[#0b1120] border-l border-slate-800 p-4 shrink-0">
        <div class="flex items-center gap-3 px-2 mb-8">
            <div id="logo-container" class="w-8 h-8"></div>
            <span class="font-bold text-lg tracking-tight text-white">זיידא Chat</span>
        </div>
        
        <nav class="flex-1 space-y-2">
            <div class="w-full flex items-center gap-3 px-3 py-2 bg-slate-800/50 rounded-lg text-indigo-400 text-sm font-medium border border-slate-700 cursor-default">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
                ניתוח נתונים
            </div>
            <button onclick="resetChat()" class="w-full flex items-center gap-3 px-3 py-2 hover:bg-slate-800/50 rounded-lg text-slate-400 text-sm font-medium transition-all text-right">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"></path><path d="M3 3v5h5"></path></svg>
                איפוס שיחה
            </button>
        </nav>

        <div class="mt-auto p-4 bg-indigo-500/5 rounded-xl border border-indigo-500/10">
            <p id="status-text" class="text-[11px] text-slate-500 italic text-center">מכין מערכת...</p>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col relative bg-[#0f172a]">
        <header class="h-16 border-b border-slate-800 flex items-center justify-between px-6 bg-[#0f172a] z-20">
            <div class="flex items-center gap-3 md:hidden">
                <div id="mobile-logo" class="w-8 h-8"></div>
                <h1 class="font-bold text-white">זיידא Chat</h1>
            </div>
            <div class="hidden md:block">
                <span class="text-xs font-semibold text-slate-500 uppercase tracking-widest">מערכת ניתוח נתונים v2.6</span>
            </div>
            <button onclick="fetchData()" id="refresh-btn" class="p-2 hover:bg-slate-800 rounded-lg transition-colors text-slate-400">
                <svg id="refresh-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 4v6h-6"></path><path d="M1 20v-6h6"></path><path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path></svg>
            </button>
        </header>

        <!-- Chat Window -->
        <div id="chat-window" class="flex-1 overflow-y-auto px-4 py-8 custom-scrollbar">
            <div id="messages-container" class="max-w-3xl mx-auto w-full flex flex-col gap-8">
                <!-- הודעות יופיעו כאן -->
            </div>
        </div>

        <!-- Input Area -->
        <footer class="p-4 md:p-8 bg-[#0f172a] border-t border-slate-800/50">
            <div class="max-w-3xl mx-auto">
                <div id="error-box" class="hidden mb-4 p-3 bg-red-500/10 border border-red-500/20 text-red-400 text-xs rounded-lg">
                    <span id="error-message"></span>
                </div>
                <div class="relative flex items-center">
                    <input
                        id="user-input"
                        type="text"
                        placeholder="שאל אותי משהו על הנתונים..."
                        class="w-full bg-[#1e293b] border border-slate-700 rounded-2xl py-4 pr-6 pl-16 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-white placeholder:text-slate-500"
                    >
                    <button
                        id="send-btn"
                        class="absolute left-3 p-2.5 bg-indigo-600 text-white rounded-xl hover:bg-indigo-500 transition-all active:scale-95"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
                    </button>
