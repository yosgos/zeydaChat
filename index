<script>
    const apiKey = ""; // API Key is handled by environment
    const MODEL_NAME = "gemini-2.5-flash-preview-09-2025";
    const JSON_URL = "https://script.googleusercontent.com/macros/echo?user_content_key=AehSKLhd6c80L4a661c2xo_VjiP4OULo1xLX5AhideTNnIBwADhgq8vI1IO0QKlxg2IFHgkbVuJFI7av0qoIPUOa6XBgLnrv_6QRMoR0MPTiwyx523icxQ5OTMPf5uqnJnjINErkwVPWCdRXtreFsnTAbNfvtnnrKi0JryZtYaOAqk1--ZKSl5eq3pm5dz5PrCnF_HmzKw1RMus93HK1nU7B3lDpivRKe_kvHapELqAU5OiUpCaSn4HTBbwqWN9xGZxQelCmNCJw2zaKATDV8hXNT2St_rLsrw&lib=MKvnEb8OzXBIaQxFnaeDEdJl9ogoAk9d_";

    let jsonData = null;
    let chatHistory = [];
    let isThinking = false;

    const zaydeIconSvg = `
        <svg viewBox="0 0 100 100" class="w-full h-full" fill="none" xmlns="http://www.w3.org/2000/svg">
            <defs>
                <linearGradient id="zG" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" stop-color="#6366f1" />
                    <stop offset="100%" stop-color="#a855f7" />
                </linearGradient>
            </defs>
            <circle cx="50" cy="50" r="48" fill="url(#zG)" fill-opacity="0.1" stroke="url(#zG)" stroke-width="2"/>
            <path d="M30 55C30 70 40 82 50 82C60 82 70 70 70 55H30Z" fill="white" fill-opacity="0.8" />
            <rect x="32" y="42" width="14" height="10" rx="2" stroke="#1e293b" stroke-width="2.5" />
            <rect x="54" y="42" width="14" height="10" rx="2" stroke="#1e293b" stroke-width="2.5" />
            <path d="M46 47H54" stroke="#1e293b" stroke-width="2.5" />
            <circle cx="39" cy="47" r="1.5" fill="#1e293b" />
            <circle cx="61" cy="47" r="1.5" fill="#1e293b" />
        </svg>
    `;

    function init() {
        document.getElementById('logo-container').innerHTML = `<div class="w-8 h-8">${zaydeIconSvg}</div>`;
        document.getElementById('mobile-logo').innerHTML = `<div class="w-8 h-8">${zaydeIconSvg}</div>`;
        fetchData();
        
        document.getElementById('send-btn').addEventListener('click', handleSend);
        document.getElementById('user-input').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') handleSend();
        });
    }

    async function fetchData() {
        const statusText = document.getElementById('status-text');
        const refreshIcon = document.getElementById('refresh-icon');
        
        statusText.innerText = "מעדכן נתונים...";
        refreshIcon.classList.add('animate-spin');
        
        try {
            const res = await fetch(JSON_URL);
            jsonData = await res.json();
            statusText.innerText = "מצב סינון נתונים: פעיל";
            if (chatHistory.length === 0) {
                addMessage('bot', 'שלום. אני זיידא Chat. המידע הוטען בהצלחה ואני מוכן לניתוח הנתונים עבורך. מה השאלה שלך?');
            }
        } catch (err) {
            showError("שגיאה בסנכרון הנתונים.");
        } finally {
            refreshIcon.classList.remove('animate-spin');
        }
    }

    function addMessage(role, content) {
        const container = document.getElementById('messages-container');
        const msgDiv = document.createElement('div');
        msgDiv.className = `flex gap-4 md:gap-6 animate-in fade-in slide-in-from-bottom-2 duration-300`;
        
        const isBot = role === 'bot';
        
        msgDiv.innerHTML = `
            <div class="shrink-0 w-8 h-8 md:w-10 md:h-10 rounded-lg flex items-center justify-center ${isBot ? 'bg-slate-800' : 'bg-indigo-600 shadow-lg shadow-indigo-500/20'}">
                ${isBot ? `<div class="w-8 h-8">${zaydeIconSvg}</div>` : `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>`}
            </div>
            <div class="flex-1 pt-1 space-y-1">
                <header class="flex items-center gap-2">
                    <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">${isBot ? 'זיידא Chat' : 'משתמש'}</span>
                </header>
                <div class="text-slate-300 leading-relaxed text-base md:text-[15px] whitespace-pre-wrap">${content}</div>
            </div>
        `;
        
        container.appendChild(msgDiv);
        chatHistory.push({ role, content });
        scrollToBottom();
    }

    function showThinking(show) {
        const container = document.getElementById('messages-container');
        const existing = document.getElementById('thinking-bubble');
        
        if (show && !existing) {
            const thinkDiv = document.createElement('div');
            thinkDiv.id = 'thinking-bubble';
            thinkDiv.className = "flex gap-4 md:gap-6";
            thinkDiv.innerHTML = `
                <div class="shrink-0 w-8 h-8 md:w-10 md:h-10 rounded-lg bg-slate-800 flex items-center justify-center animate-pulse">
                     <div class="w-8 h-8 opacity-50">${zaydeIconSvg}</div>
                </div>
                <div class="flex-1 pt-4">
                    <div class="flex gap-1.5">
                        <div class="w-1.5 h-1.5 bg-indigo-500 rounded-full animate-bounce" style="animation-delay: -0.3s"></div>
                        <div class="w-1.5 h-1.5 bg-indigo-500 rounded-full animate-bounce" style="animation-delay: -0.15s"></div>
                        <div class="w-1.5 h-1.5 bg-indigo-500 rounded-full animate-bounce"></div>
                    </div>
                </div>
            `;
            container.appendChild(thinkDiv);
        } else if (!show && existing) {
            existing.remove();
        }
        scrollToBottom();
    }

    async function handleSend() {
        const inputEl = document.getElementById('user-input');
        const text = inputEl.value.trim();
        if (!text || isThinking || !jsonData) return;

        inputEl.value = '';
        addMessage('user', text);
        isThinking = true;
        showThinking(true);
        hideError();

        try {
            const response = await callAI(text);
            showThinking(false);
            addMessage('bot', response);
        } catch (err) {
            showThinking(false);
            showError("תקלה בתקשורת עם השרת.");
        } finally {
            isThinking = false;
        }
    }

    async function callAI(prompt) {
        const systemPrompt = `Your name is "זיידא Chat". 
        STRICT RULES:
        1. NO TABLES: Never use | or --- table formats.
        2. NO CODES: Never reveal numbers like 07.00.0.0 or any technical IDs.
        3. COMMON NAMES: Use only the short/common names, not formal full names.
        4. NO HEADERS: Do not list headers like "שם", "גיל". Just write the content naturally.
        5. LANGUAGE: Hebrew only.
        
        Data: ${JSON.stringify(jsonData)}`;

        const contents = chatHistory.map(m => ({
            role: m.role === 'user' ? 'user' : 'model',
            parts: [{ text: m.content }]
        }));

        let retries = 0;
        const delays = [1000, 2000, 4000];

        while (retries < 3) {
            try {
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/${MODEL_NAME}:generateContent?key=${apiKey}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        contents: contents,
                        systemInstruction: { parts: [{ text: systemPrompt }] }
                    })
                });
                const data = await response.json();
                return data.candidates[0].content.parts[0].text;
            } catch (e) {
                if (retries === 2) throw e;
                await new Promise(r => setTimeout(r, delays[retries]));
                retries++;
            }
        }
    }

    function scrollToBottom() {
        const win = document.getElementById('chat-window');
        win.scrollTop = win.scrollHeight;
    }

    function resetChat() {
        document.getElementById('messages-container').innerHTML = '';
        chatHistory = [];
        addMessage('bot', 'היסטוריית השיחה אופסה. מה תרצה לדעת עכשיו?');
    }

    function showError(msg) {
        const box = document.getElementById('error-box');
        document.getElementById('error-message').innerText = msg;
        box.classList.remove('hidden');
    }

    function hideError() {
        document.getElementById('error-box').classList.add('hidden');
    }

    window.onload = init;
</script>

</body>
</html>
